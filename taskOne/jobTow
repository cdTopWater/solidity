pragma solidity ~0.8.0;


contract JobTow {
    // 反转字符串 (Reverse String)
    // 题目描述：反转一个字符串。输入 "abcde"，输出 "edcba"



    function exchange(string memory params)   public pure returns (string memory) {
        bytes memory abc = bytes(params);
        uint256 len = abc.length;
        bytes memory cba = new bytes(len);
        for (uint256 i=0;i<len;i++){
            cba[i] = abc[len-1-i];
        }
        return string(cba);
    }

}
