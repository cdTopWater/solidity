pragma solidity ~0.8.0;

contract Voting {

    //     创建一个名为Voting的合约，包含以下功能：
    // 一个mapping来存储候选人的得票数
    // 一个vote函数，允许用户投票给某个候选人
    // 一个getVotes函数，返回某个候选人的得票数
    // 一个resetVotes函数，重置所有候选人的得票数
    mapping(string => uint256) public votes; // 存储候选人得票数
    string [] public candidates;

    function vote(string memory voteName) public {
        if (votes[voteName] ==0){
            candidates.push(voteName);
        }
        votes[voteName] += 1;
    }

    function getVotes(string memory voteName) public view returns (uint256) {
        return  votes[voteName];
    }

    function resetVotes()public  {
        for(uint256 i=0;i<candidates.length;i++){
            votes[candidates[i]] = 0;
        }
        delete candidates;
    }
}
